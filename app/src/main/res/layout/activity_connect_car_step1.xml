<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".app.src.kotlin.client.lessor.ConnectCarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Назад" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавление автомобиля"
                android:textColor="#2F2F2F"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Метка для Фамилии -->
        <TextView
            android:id="@+id/tvLocationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Где расположен ваш автомобиль?"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvRegisterTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" />

        <!-- Поле ввода фамилии -->
        <EditText
            android:id="@+id/etLocationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите адрес"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/tvLastNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"/>
        <!-- Кнопка "Начать" -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Далее"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="500dp"
            android:layout_gravity=""/>
    </LinearLayout>
</ScrollView>